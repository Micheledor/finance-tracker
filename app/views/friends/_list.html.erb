<div class="row">
  <div class="col-9">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Tracked stocks</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
      <% @friends.each do |f| %>
        <tr>
          <td><%= f.full_name %></td>
          <td><%= f.email %></td>
          <td><%= f.stocks.count %></td>
          <td> <%= link_to 'View profile', user_path(f), class: 'btn btn-sm btn-success'%>
          
          <%= link_to 'Unfollow', friendship_path(f), method: :delete, data: {confirm: 'Are you sure?'},
                                          class: 'btn btn-sm btn-warning'%> </td>
        </tr>
      <% end %>  
      </tbody>
    </table>
  </div>
</div>